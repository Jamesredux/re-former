<%= form_for @user do |f| %> 
	<%= f.label :username, "Your username here." %>
	<%= f.text_field :username, placeholder: true %><br />
	<%= f.label :email %>
	<%= f.email_field :email, placeholder: "example@email.com" %><br />
	<%= f.label :password %>
	<%= f.password_field :password, placeholder: true %><br />
	<%= f.submit "submit" %>
<% end %>	